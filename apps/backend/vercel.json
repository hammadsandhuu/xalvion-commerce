{
  "version": 2,
  "builds": [
    {
      "src": "src/app.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/app.js"
    }
  ],
  "installCommand": "pnpm install --filter ./apps/api...",
  "buildCommand": "echo 'No build step required for API'",
  "env": {
    "NODE_ENV": "production",
    "STRIPE_SECRET_KEY": "@stripe_secret_key",
    "MONGO_URI": "@mongo_uri",
    "JWT_SECRET": "@jwt_secret"
  }
}
