{
  "name": "@xalvion/platform",
  "private": true,
  "packageManager": "pnpm@10.18.3",
  "scripts": {
    "// dev scripts": "",
    "dev": "turbo run dev --parallel",
    "dev:web": "pnpm --filter ./apps/web dev",
    "dev:admin": "pnpm --filter ./apps/admin dev",
    "dev:backend": "pnpm --filter ./apps/backend dev",

    "// build scripts": "",
    "build": "turbo run build",
    "build:web": "pnpm --filter ./apps/web build",
    "build:admin": "pnpm --filter ./apps/admin build",
    "build:api": "pnpm --filter ./apps/backend build",

    "// lint/test (optional)": "",
    "lint": "turbo run lint",
    "test": "turbo run test"
  },
  "devDependencies": {
    "turbo": "^2.5.8",
    "typescript": "^5.9.3"
  }
}
